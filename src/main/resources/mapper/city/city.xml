<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.heeroes.setset.city.model.mapper.CityMapper">
	<!-- 시도리스트 조회  -->
	<select id="getSidoList" resultType="city">
		select sido
		from city
	</select>
	
	<!-- 시도 기반 구 조회 -->
	<select id="searchBySido" parameterType="map" resultType="city">
		select gu
		from city
		where sido = #{sido}
	</select>
	
	<!-- 시도, 구 기반 동 조회 -->
	<select id="searchBySidoGu" parameterType="map" resultType="city">
		select dong
		from city
		where sido = #{sido} and gu = #{gu}
	</select>

</mapper>