<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heeroes.setset.comment.model.mapper.CommentMapper">
    <insert id="create" parameterType="comment">
        insert into `comment` (content, created_at, article_id, user_id)
            value (#{content}, now(), #{articleId}, #{userId})
    </insert>
    <update id="update" parameterType="comment">
        update comment set content=#{content}
        where id=#{id}
    </update>
    <select id="findById" parameterType="int">
        select id, content, created_at, article_id, user_id
        from comment
        where id=#{id}
    </select>

    <delete id="deleteById" parameterType="int">
        delete from comment
        where id=#{id}
    </delete>
    <delete id="deleteAllByArticleId" parameterType="int">
        delete from comment
        where article_id=#{id}
    </delete>
</mapper>