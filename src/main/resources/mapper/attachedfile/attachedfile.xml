<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heeroes.setset.attachedfile.model.mapper.AttachedFileMapper">
    <insert id="insertAttachedFileList" parameterType="java.util.List">
        insert into attached_file(image_key, original_name, article_id)
        values
        <foreach collection="list" item="item" separator=",">
            ( #{item.imageKey}, #{item.originalName}, #{item.articleId} )
        </foreach>
    </insert>

    <select id="findByArticleId" parameterType="int" resultType="attachedFile">
        select id, image_key, original_name, article_id
        from attached_file
        where article_id=#{articleId}
    </select>

    <!-- 선택된 게시글 삭제하기 -->
    <delete id="deleteAllById" parameterType="java.util.List">
        DELETE FROM attached_file
            <where>
                <foreach collection="list" item="item" separator="OR">
                    (id=#{item.id})
                </foreach>

            </where>

    </delete>
</mapper>