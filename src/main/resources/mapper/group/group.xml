<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heeroes.setset.group.model.mapper.GroupMapper">
    <insert id="insert" parameterType="group" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into `group` (name)
        value (#{name})
    </insert>

    <update id="modify" parameterType="group">
        update `group` set name=#{name}, img=#{img}
        where id=#{id}
    </update>

</mapper>