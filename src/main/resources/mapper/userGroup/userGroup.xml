<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heeroes.setset.usergroup.model.mapper.UserGroupMapper">
    <insert id="insert" parameterType="userGroup" >
        insert into `user_group` (user_id, group_id)
            values (#{userId}, #{groupId})
    </insert>

    <select id="isExist" parameterType="userGroup" resultType="boolean">
        SELECT IF(COUNT(*) = 1, 1, 0)
        FROM `user_group`
        WHERE user_id = #{userId} and group_id = #{groupId}
    </select>

    <!-- 삭제 -->
    <delete id="delete" parameterType="userGroup">
        delete from `user_group`
        where user_id=#{userId} and group_id=#{groupId}
    </delete>

    <select id="countGroupUser" parameterType="int" resultType="int">
        SELECT count(user_id)
        FROM `user_group`
        WHERE group_id=#{groupId}
    </select>
</mapper>