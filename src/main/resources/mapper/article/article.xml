<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heeroes.setset.article.model.mapper.ArticleMapper">
    <insert id="create" parameterType="article" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into `article` (content, created_at, group_id, user_id)
            value (#{content}, now(), #{groupId}, #{userId})
    </insert>
    <select id="findById" parameterType="int" resultType="article">
        select id, content, created_at, group_id, user_id
        from article
        where id=#{id}
    </select>
    <delete id="deleteById" parameterType="int">
        delete from article
        where id=#{id}
    </delete>
    <update id="modify" parameterType="article">
        update article set content=#{content}
        where id=#{id}
    </update>


    <resultMap id="articleWithFile" type="article">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
        <result property="groupId" column="group_id"/>
        <result property="userId" column="user_id"/>
        <!-- List<String> 형식으로 imageKey 매핑 -->
        <collection property="images" ofType="String">
            <result column="image_key" property="image_key"/>
        </collection>
    </resultMap>
    <!--해당 그룹의 모든 게시글 조회 + 게시글 당 첨부파일까지 조회 -->
    <select id="getFeed" parameterType="int" resultMap="articleWithFile">
        select a.id, a.content, a.created_at, a.group_id, a.user_id, f.image_key
        from article a
        left join attached_file f
        on a.id = f.article_id
        where a.group_id=#{groupId}
        order by created_at desc
    </select>
</mapper>